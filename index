    <script>
        // é¡Œåº«ï¼šå¯ä»¥è‡ªç”±æ–°å¢
        // ç‚ºäº†ç¢ºä¿ç™¼éŸ³æ¸…æ™°ï¼Œé€™è£¡é¸ç”¨äº†å–®éŸ³ç¯€å­—
        const questions = [
            { word: "åª½", tone: 1, pinyin: "mÄ" },
            { word: "é­š", tone: 2, pinyin: "yÃº" },
            { word: "ç­†", tone: 3, pinyin: "bÇ" },
            { word: "å»", tone: 4, pinyin: "qÃ¹" },
            { word: "å“­", tone: 1, pinyin: "kÅ«" },
            { word: "èŒ¶", tone: 2, pinyin: "chÃ¡" },
            { word: "é¦¬", tone: 3, pinyin: "mÇ" },
            { word: "çœ‹", tone: 4, pinyin: "kÃ n" },
            { word: "é«˜", tone: 1, pinyin: "gÄo" },
            { word: "ä¸", tone: 4, pinyin: "bÃ¹" }
        ];

        // æƒ…ç·’åƒ¹å€¼ï¼šè®šç¾è©åº«
        const praises = [
            "å¤ªç¥äº†ï¼è€³æœµçœŸéˆï¼", 
            "ç™¼éŸ³è½å¾—å¾ˆæº–å–”ï¼", 
            "è€å¸«çµ¦ä½ ä¸€å€‹è®šï¼", 
            "ç­”å°äº†ï¼ç¹¼çºŒä¿æŒï¼", 
            "Excellent! å¥½æ£’ï¼"
        ];

        let currentQuestionIndex = 0;
        let score = 0;
        let isAnswering = true;

        function updateUI() {
            document.getElementById('current-q').innerText = currentQuestionIndex + 1;
            document.getElementById('score').innerText = score;
            const progress = ((currentQuestionIndex) / 10 * 100);
            document.getElementById('progress-bar').style.width = progress + "%";
            
            const feedback = document.getElementById('feedback-text');
            feedback.innerText = "è«‹é»æ“ŠæŒ‰éˆ•è½è²éŸ³...";
            feedback.className = "feedback-area"; // é‡ç½®æ¨£å¼
            
            const btns = document.querySelectorAll('.tone-btn');
            btns.forEach(btn => {
                btn.style.opacity = "1";
                btn.disabled = false;
                btn.style.boxShadow = ""; // é‡ç½®é™°å½±
            });
            isAnswering = true;
        }

        // æ ¸å¿ƒä¿®æ”¹ï¼šä½¿ç”¨ Google ç·šä¸Š TTS æ¥å£
        // é€™æœƒæ¯”ç€è¦½å™¨å…§å»ºçš„è²éŸ³æ›´è‡ªç„¶ã€æ›´æ¨™æº–
        function playAudio() {
            const btn = document.getElementById('play-btn');
            const icon = document.getElementById('btn-icon');
            const text = document.getElementById('btn-text');
            
            // UI åæ‡‰ï¼šé¡¯ç¤ºè¼‰å…¥ä¸­
            btn.disabled = true;
            text.innerText = "è®€å–ä¸­...";
            
            const currentQ = questions[currentQuestionIndex];
            const word = currentQ.word;
            
            // Google TTS URL (client=tw-ob æ˜¯å…¬é–‹æ¥å£)
            const audioUrl = `https://translate.google.com/translate_tts?ie=UTF-8&client=tw-ob&tl=zh-TW&q=${encodeURIComponent(word)}`;
            
            const audio = new Audio(audioUrl);
            
            // è™•ç†æ’­æ”¾
            audio.play().then(() => {
                // æ’­æ”¾æˆåŠŸ
                btn.disabled = false;
                text.innerText = "å†è½ä¸€æ¬¡";
                icon.innerText = "ğŸ”Š";
            }).catch(error => {
                // æ’­æ”¾å¤±æ•— (é€šå¸¸æ˜¯å› ç‚ºç¶²è·¯å•é¡Œ)
                console.error("Audio error:", error);
                btn.disabled = false;
                text.innerText = "æ’­æ”¾å¤±æ•—";
            });
        }

        function playSound(type) {
            const sound = document.getElementById(`sound-${type}`);
            if(sound) {
                sound.currentTime = 0;
                sound.play().catch(e => {}); // å¿½ç•¥è‡ªå‹•æ’­æ”¾é™åˆ¶éŒ¯èª¤
            }
        }

        function fireConfetti(scalar = 1) {
            const count = 200;
            const defaults = {
                origin: { y: 0.7 },
                zIndex: 9999
            };

            function fire(particleRatio, opts) {
                confetti(Object.assign({}, defaults, opts, {
                    particleCount: Math.floor(count * particleRatio * scalar)
                }));
            }

            fire(0.25, { spread: 26, startVelocity: 55 });
            fire(0.2, { spread: 60 });
            fire(0.35, { spread: 100, decay: 0.91, scalar: 0.8 });
            fire(0.1, { spread: 120, startVelocity: 25, decay: 0.92, scalar: 1.2 });
            fire(0.1, { spread: 120, startVelocity: 45 });
        }

        function checkAnswer(selectedTone, btnElement) {
            if (!isAnswering) return;
            isAnswering = false;

            const currentQ = questions[currentQuestionIndex];
            const feedback = document.getElementById('feedback-text');

            if (selectedTone === currentQ.tone) {
                // Correct
                score += 10;
                document.getElementById('score').innerText = score;
                
                feedback.innerText = `âœ¨ ${getRandomPraise()} (${currentQ.pinyin}) âœ¨`;
                feedback.className = "feedback-area correct-style";
                
                playSound('correct');
                fireConfetti(0.5); 
                
            } else {
                // Wrong
                feedback.innerText = `å“å‘€ï¼æ˜¯ ${currentQ.tone} è² (${currentQ.pinyin})`;
                feedback.className = "feedback-area wrong-style";
                
                playSound('wrong');
                
                // æ¨™è¨˜æ­£ç¢ºç­”æ¡ˆ
                const btns = document.querySelectorAll('.tone-btn');
                btns[currentQ.tone - 1].style.boxShadow = "0 0 20px #2ecc71";
                btns[currentQ.tone - 1].style.transform = "scale(1.05)";
            }

            // è®“é™¤äº†æ­£ç¢ºæŒ‰éˆ•ä»¥å¤–çš„è®Šæš—ï¼Œå‡¸é¡¯ç­”æ¡ˆ
            const btns = document.querySelectorAll('.tone-btn');
            btns.forEach((btn, index) => {
                if (index + 1 !== currentQ.tone) {
                    btn.style.opacity = "0.5";
                }
            });

            setTimeout(() => {
                nextQuestion();
            }, 1800);
        }

        function getRandomPraise() {
            return praises[Math.floor(Math.random() * praises.length)];
        }

        function nextQuestion() {
            currentQuestionIndex++;
            if (currentQuestionIndex < 10) {
                updateUI();
            } else {
                showResult();
            }
        }

        function showResult() {
            document.getElementById('game-screen').style.display = 'none';
            document.getElementById('result-screen').style.display = 'block';
            
            // åˆ†æ•¸å‹•ç•«
            let startScore = 0;
            const endScore = score;
            const scoreElement = document.getElementById('final-score');
            
            const timer = setInterval(() => {
                if(startScore < endScore) {
                    startScore++;
                    scoreElement.innerText = startScore;
                } else {
                    clearInterval(timer);
                    triggerFinalCelebration(endScore);
                }
            }, 20);
        }

        function triggerFinalCelebration(finalScore) {
            let praise = "";
            const praiseText = document.getElementById('final-praise');

            if (finalScore === 100) {
                praise = "ğŸŒŸ å®Œç¾ç„¡ç¼ºï¼ä½ æ˜¯è¯èªè½åŠ›ä¹‹ç¥ï¼ğŸŒŸ<br>è€å¸«ç‚ºä½ æ„Ÿåˆ°ç„¡æ¯”é©•å‚²ï¼";
                playSound('win');
                launchFireworks();
            } else if (finalScore >= 80) {
                praise = "ğŸ¤© éå¸¸å²å®³ï¼ä½ çš„ä¸­æ–‡è€³æœµå·²ç¶“å¾ˆæ£’äº†ï¼<br>å†ä¸€é»é»å°±å®Œç¾äº†ï¼";
                playSound('win');
                fireConfetti(1);
            } else if (finalScore >= 60) {
                praise = "ğŸ‘ åšå¾—å¥½ï¼ä½ å·²ç¶“æŒæ¡äº†åŸºæœ¬åŠŸï¼<br>ç¹¼çºŒç·´ç¿’ï¼Œä½ æœƒè¶Šä¾†è¶Šå¼·ï¼";
                fireConfetti(0.5);
            } else {
                praise = "ğŸ’ª åˆ¥ç°å¿ƒï¼è²èª¿æ˜¯å¤§é­”ç‹ã€‚<br>è€å¸«é™ªä½ ä¸€èµ·ç·´ç¿’ï¼Œä¸‹æ¬¡ä¸€å®šè¡Œï¼";
            }
            praiseText.innerHTML = praise;
        }

        function launchFireworks() {
            // é€£çºŒç™¼å°„æ…¶ç¥
            var duration = 3000;
            var end = Date.now() + duration;

            (function frame() {
                confetti({
                    particleCount: 5,
                    angle: 60,
                    spread: 55,
                    origin: { x: 0 }
                });
                confetti({
                    particleCount: 5,
                    angle: 120,
                    spread: 55,
                    origin: { x: 1 }
                });

                if (Date.now() < end) {
                    requestAnimationFrame(frame);
                }
            }());
        }

        function restartGame() {
            currentQuestionIndex = 0;
            score = 0;
            
            // æ´—ç‰Œ
            for (let i = questions.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [questions[i], questions[j]] = [questions[j], questions[i]];
            }

            document.getElementById('game-screen').style.display = 'block';
            document.getElementById('result-screen').style.display = 'none';
            updateUI();
        }

        // åˆå§‹åŒ–
        updateUI();
    </script>
